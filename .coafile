# python files should only use spaces
[Python Spacing]
files = **/*.py
bears = SpaceConsistencyBear
use_spaces = True

# C indent settings
# Can add more checks here
[C Indent]
files = **/*.c
bears = GNUIndentBear
use_spaces = False
